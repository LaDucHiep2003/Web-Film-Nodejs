
extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    +alert-error(5000)
    +success(5000)
    h1(class = "mb-4") Cap Nhat Nhom Quyen

    form(
        action= `/admin/roles/edit/${data.id}?_method=PATCH`
        method = "POST"
    ) 

        div(class = "form-group")
            label(for="name") Tieu De 
            input(
                type="text"
                class = "form-control"
                id = "name"
                name = "name"
                value = data.name
            ) 
        div(class = "form-group")
            label(for="desc") Mo Ta 
            input(
                type="text"
                class = "form-control"
                id = "desc"
                name = "description"
                value = data.description
            ) 
        div(class = "form-group")
            button(
                type = "submit"
                class = "btn btn-primary"
            ) Cap nhat