extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main 
    if(role.permissions.includes("products-category_views"))
        h1 Danh Muc Phim
        .card.mb-3 
            .card-header Danh Sach
                .card-body 
                    .row
                        .col-8 
                        .col-4 
                            a(
                                href= `/admin/products-category/create`
                                class = "btn btn-outline-success mb-3"

                            ) + Them Moi
                    table(
                        class = "table table-hover table-sm"
                        checkbox-multi
                        )
                        thead 
                            tr 
                                th 
                                    input(type="checkbox" name="checkall")
                                th STT 
                                th Hinh anh 
                                th Ten
                                th Vi TRi
                                th Trang thai 
                                th Hanh Dong
                        tbody 
                            +table-tree(records)
                                