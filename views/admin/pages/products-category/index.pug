extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main 
    if(role.permissions.includes("products-category_views"))
        h1 Danh mục phim
        .card.mb-3 
            .card-header Danh sách
                .card-body 
                    table(
                        class = "table table-hover table-sm"
                        checkbox-multi
                        )
                        thead 
                            tr 
                                th 
                                    input(type="checkbox" name="checkall")
                                th STT 
                                th Hình ảnh
                                th Tên
                                th Vị trí
                                th Trạng thái
                                th Hành động
                        tbody 
                            +table-tree(records)
                                