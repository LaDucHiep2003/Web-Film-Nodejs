extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    if(role.permissions.includes("products_create"))
        +alert-error(5000)
        h1(class = "mb-4") Them Moi Phim

        form(
            action= `/admin/products/create`
            id = "form-create-product"
            enctype="multipart/form-data"
            method = "POST"
        ) 

            div(class = "form-group")
                label(for="name") Tên phim
                input(
                    type="text"
                    class = "form-control"
                    id = "name"
                    name = "name"
                )   
            div(class = "form-group")
                label(for="movie_category_id") Danh Muc
                select(
                    name = "movie_category_id"
                    id = "movie_category_id"
                    class = "form-control"
                )
                    option(value = "") -----Chon danh muc-----
                    if(category)
                        +select-tree(category)
            div(class = "form-group")
                label(for="nameOther") Tên khác
                input(
                    type="text"
                    class = "form-control"
                    id = "nameOther"
                    name = "nameOther"
                ) 
            div(class = "form-group")
                label(for="textContent") Noi Dung
                textarea(

                    class = "form-control textarea-mce"
                    id = "textContent"
                    name = "textContent"
                    row = "5"   
                ) 
            div(class = "form-group")
                label(for="listCate") The Loai
                input(
                    type="text"
                    class = "form-control"
                    id = "listCate"
                    name = "listCate"
                ) 

            div(class = "form-group")
                label(for="newEp") Tap Moi Nhat
                input(
                    type="newEp"
                    class = "form-control"
                    id = "newEp"
                    name = "newEp"
                    value = "0"
                    min = "0"
                ) 
            div(class = "form-group")
                label(for="infoMore") Thong Tin Khac
                input(
                    type="text"
                    class = "form-control"
                    id = "infoMore"
                    name = "infoMore"
                ) 
            div(class = "form-group")
                label(for="rate") Danh Gia
                input(
                    type="text"
                    class = "form-control"
                    id = "rate"
                    name = "rate"
                )
            div(class = "form-group")
                label(for="backgound") Background
                input(
                    type="text"
                    class = "form-control"
                    id = "backgound"
                    name = "backgound"
                )

            div(class = "form-group")
                label(for="Showtimes") Thoi Luong Phim
                input(
                    type="number"
                    class = "form-control"
                    id = "Showtimes"
                    name = "Showtimes"
                    value = "0"
                    min = "0"
                ) 
            
            div(
                class = "form-group"
                upload-image
            )
                label(for="image") Anh
                input(
                    type="file"
                    class = "form-control-file"
                    id = "image"
                    name = "image"
                    accept = "image/*"
                    upload-image-input
                ) 
                button(
                    class = "btn-cencel-upload hidden"
                    cencel-upload) X
                img(
                    src=""
                    class = "image-preview"
                    upload-image-preview
                )
            div(class = "form-group")
                label(for="position") Vi tri
                input(
                    type="text"
                    class = "form-control"
                    id = "position"
                    name = "position"
                    placeholder = "Tu Dong tang"
                    min = "1"
                ) 
            div(class = "form-group form-check form-check-inline")
                
                input(
                    type="radio"
                    class = "form-check-input"
                    id = "statusActive"
                    name = "status"
                    value = "active"
                    checked
                ) 
                label(for = "statusActive" class = "form-check-label") Hoat Dong 

            div(class = "form-group form-check form-check-inline")
                
                input(
                    type="radio"
                    class = "form-check-input"
                    id = "statusInActive"
                    name = "status"
                    value = "inactive"
                ) 
                label(for = "statusInActive" class = "form-check-label") Dung Hoat Dong 
            
            div(class = "form-group")
                button(
                    type = "submit"
                    class = "btn btn-primary"
                ) Tao moi